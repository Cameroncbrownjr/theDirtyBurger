<div class="row">
  <div class="col-4">
    <h2 class="heading">Menu</h2>
    <ul>
      {{#each burgers}}
      {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-4">
    <img src="/burger">
    <h2 class="heading">Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="bu">Burger Type:</label>
        <br>
        <input type="text" id="bu" name="name">
      </div>
      <br>
      <div class="form-group">
        <label for="eaten">Where To?</label><br>
        
        <input type="radio" name="eaten" value="0"> To The Left
        <input type="radio" name="eaten" value="1" checked>To The Right<br>
      </div>
      <br>
      <button type="submit" class="button">Add Burger</button>
    </form>
  </div>

  <div class="col-4">
    <h2 class="heading">Devoured</h2>
    <ul>
      {{#each burgers}}
      {{#if eaten}}
      {{> burgers/burger-block eat=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  

</div>
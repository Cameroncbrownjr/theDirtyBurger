<div class="container">
    <center>
        <img src="assets/img/burger.png" alt="">
        <h1>the Dirty Burger</h1>
        <div class="row">
            <div class="col-5">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-2">
                <h2>Devoured</h2>
            </div>
            <div class="col-5">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
            </div>
            <input type="text" class="form-control" placeholder="Your Burger" name="burger">
            <button type="btn" id="submit" class="btn btn-primary">Submit</button>
        </div>
        <p>Enter a burger you want to eat and click the submit button</p>
        <small class="text-muted">We dont judge :)</small>
    </center>
</div>